    "version": "0.2.0",
    "configurations": [
        // example for using the Mono Debug extension
        {
            "name": "LaunchGGrShell",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}/engine-net-2/bin/GGrShell.exe",
            "cwd": "${workspaceRoot}/engine-net-2/bin"
        },
        {
            "name": "LaunchGrShellExampleReengineering",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}/engine-net-2/bin/GrShell.exe",
            "cwd": "${workspaceRoot}/engine-net-2/examples/Reengineering-TTC-2011",
            "args": ["reengineering.grs"],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        }
    ]
}