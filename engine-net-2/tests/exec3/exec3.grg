using execModel;

test Match
{
	a:A -:ee-> b:B -:ee-> c:Node --> c;
}

rule addA
{
	modify {
		exec({::a=add(A)});
	}
}

rule addB
{
	modify {
		exec({::b=add(B)});
	}
}

rule addC
{
	modify {
		exec({::c=add(Node)});
	}
}

rule addE
{
	modify {
		exec({::e=add(ee,::a,::b)});
	}
}

rule addF
{
	modify {
		exec({::f=add(ee,::b,::c)});
	}
}

rule addG
{
	modify {
		exec({::g=add(Edge,::c,::c)});
	}
}

rule getSrc
{
	modify {
		exec({::src=source(::e)});
	}
}

rule getTgt
{
	modify {
		exec({::tgt=target(::e)});
	}
}

rule remG
{
	modify {
		exec({rem(::g)});
	}
}

rule remB
{
	modify {
		exec({rem(::b)});
	}
}

rule clr
{
	modify {
		exec({clear()});
	}
}



