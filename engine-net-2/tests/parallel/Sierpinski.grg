#using "SierpinskiModel.gm"

rule init {
	replace {
		a:A -:E0-> b:B -:E0-> c:C -:E0-> a;
	}
}

rule gen0 {
	a:A -:E0-> b:B -:E0-> c:C -:E0-> a;

	replace {
		a -:E1-> ab:AB -:E1-> b -:E1-> bc:BC -:E1-> c -:E1-> ca:CA -:E1-> a;
		ab -:E1-> ca -:E1-> bc -:E1-> ab;
	}
}

rule gen1 {
	a:A -:E1-> b:B -:E1-> c:C -:E1-> a;

	replace {
		a -:E0-> ab:AB -:E0-> b -:E0-> bc:BC -:E0-> c -:E0-> ca:CA -:E0-> a;
		ab -:E0-> ca -:E0-> bc -:E0-> ab;
	}
}
