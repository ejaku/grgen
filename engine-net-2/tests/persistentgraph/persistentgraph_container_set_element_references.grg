#using "persistentgraph_container_set_element_references.gm"

rule init
{
	modify {
		n:N -e:E-> n;
		eval {
			def ref o:O = new O();
			n.c_o = set<O>{ o }; e.c_o = set<O>{ o };
			o.c_o = set<O>{ o }; o.c_n = set<N>{ n }; o.c_e = set<E>{ e };
		}
		eval { n.c_n = set<N>{ n }; n.c_e = set<E>{ e }; e.c_n = set<N>{ n }; e.c_e = set<E>{ e }; }
	}
}

rule patchObject
{
	n:N -e:E-> n;
		
	modify {
		eval {
			// object sharing would cause either the find in the nested graph or the find in the host graph to fail (because of node/edge references in the object not referencing the nodes/edges of the current graph)
			def ref o:O = new O();
			n.c_o = set<O>{ o }; e.c_o = set<O>{ o };
			o.c_o = set<O>{ o }; o.c_n = set<N>{ n }; o.c_e = set<E>{ e };
			
			// clones of graph elements as created e.g. by inducedSubgraph/definedSubgraph contain references to original graph elements/objects - patch them to reference local elements, so find works
			n.c_n = set<N>{ n }; n.c_e = set<E>{ e };
			e.c_n = set<N>{ n }; e.c_e = set<E>{ e };
		}
	}
}

rule initNested
{
	n:N -e:E-> n;
	
	modify {
		---
		exec( { n.c_g = set<graph>{ inducedSubgraph(set<Node>{ }) } } ;>  in n.c_g.peek(0) { init } );
		exec( { e.c_g = set<graph>{ definedSubgraph(set<Edge>{ e }) } } ;>  in e.c_g.peek(0) { patchObject } );
		exec( o:O ;> { o = n.c_o.peek(0); o.c_g = set<graph>{ inducedSubgraph(set<Node>{ }) } } ;>  in o.c_g.peek(0) { init } );
		exec( g:graph ;> ln:N ;> le:E ;> lo:O ;> { g = inducedSubgraph(set<Node>{ }) } ;>  in g { init ;> (ln,le,lo)=find } ;> { n.c_nodeFromOtherwiseUnreachableGraph = set<N>{ ln } } );
	}
}

test find : (N, E, O)
{
	n:N -e:E-> n;
	if{ n.c_o != null; n.c_o == e.c_o; n.c_o == n.c_o.peek(0).c_o; }
	
	if{ n.c_n.peek(0) == n && n.c_e.peek(0) == e; }
	if{ e.c_n.peek(0) == n && e.c_e.peek(0) == e; }
	if{ n.c_o.peek(0).c_n.peek(0) == n && n.c_o.peek(0).c_e.peek(0) == e; }
	
	return(n,e,n.c_o.peek(0));
}
