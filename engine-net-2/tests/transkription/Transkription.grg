rule createDNAChain
{
	replace {
		:DNAChainBeginAdenin(pLink1);
		pLink1:P;
		:DNAChainElementCytosin(pLink1, pLink2);
		pLink2:P;
		:DNAChainElementGuanin(pLink2, pLink3);
		pLink3:P;
		:DNAChainElementThymin(pLink3, pLink4);
		pLink4:P;
		:DNAChainEndAdenin(pLink4);
	}
}

