rule test1:(A) {
  pattern {
    a:A;
    if { a.val == 5; }
  }
  replace {
    x:A;
    eval {
      x.val = a.val + 2;
    }
    return (x);
  }
}

rule test2:(A) {
  pattern {
    a:A;
    b:A;
    if { a.val == 5; }
  }
  replace {
    b;
    x:A;
    eval {
      x.val = a.val + b.val + 2;
    }
    return (x);
  }
}

rule test3:(E) {
  pattern {
    a:A -e:E-> a;
    if { e.val == 20; }
  }
  replace {
    a -x:E -> a;
    eval {
      x.val = e.val + 2;
    }
    return (x);
  }
}

